<div class="blog-posts-container">
  <h2>Recent Posts</h1>

  <% if @blog_posts.any? %>
    <% @blog_posts.each do |post| %>
      <div class="blog-post">
        <h3><%= link_to post.title, blog_post_path(post) %></h3>
        <p><%= truncate(post.content, length: 100) %></p>
        <hr>
      </div>
    <% end %>
  <% else %>
    <p>No blog posts to display.</p>
  <% end %>
</div>
